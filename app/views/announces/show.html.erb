<%- model_class = Announce -%>
<%= link_to t('.back', :default => t("helpers.links.back")),
            categories_path, :class => 'btn btn-default'  %>
<div>
  <h3><%= @announce.title %></h3>
</div>
<div class="row">

  <div class="col-md-9">
    <p>
      <strong><%= model_class.human_attribute_name(:price) %>:  </strong>
      <%= @announce.price %> cuc </br>
      <strong>Date:  </strong>
      <%= @announce.created_at.strftime("%b %e, %Y at %H:%M:%S")%>
    </p>
    <p>
      <%= @announce.content %>
    </p>
    <div>
      <% if @announce.image1.present? %>
          <%= link_to @announce.image1.url , :class=>'image-link' , :target=>'blank' do  %>
              <%= image_tag @announce.image1.url(:thumb) %>
          <% end %>
    <% end %>
      <% if @announce.image2.present? %>
          <%= link_to @announce.image2.url , :class=>'image-link' , :target=>'blank' do  %>
              <%= image_tag @announce.image2.url(:thumb) %>
          <% end %>
    <% end %>
      <% if @announce.image3.present? %>
          <%= link_to @announce.image3.url , :class=>'image-link' , :target=>'blank' do  %>
              <%= image_tag @announce.image3.url(:thumb) %>
           <% end %>
      <% end %>

    </div>

  </div>
  <div class="col-md-3">
    <div class="well sidebar-nav">
      <ul class="nav nav-list">
        <li class="nav-header">Actions</li>
        <li>
          <%= link_to t('.edit', :default => t("helpers.links.edit")+ ' Announce'),
                      edit_announce_path(@announce) %>
        </li>
        <li>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")+ ' Announce'),
                      announce_path(@announce),
                      :method => 'delete',
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }%>
        </li>
      </ul>
    </div><!--/.well -->
  </div><!--/span-->
</div>





