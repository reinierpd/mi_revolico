<%- model_class = Announce -%>
<div class="page-header">
  <h1> <%= link_to t('.back', :default => t("helpers.links.back")),
                   categories_path, :class => 'btn btn-default'  %>
    <%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="row">
  <div class="col-md-3">
    <div class="well sidebar-nav">
      <ul class="nav nav-list">
        <li class="nav-header">Actions</li>
        <li>
          <%= link_to t('.edit', :default => t("helpers.links.edit")+ ' Announce'),
                      edit_announce_path(@announce) %>
        </li>
        <li>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")+ ' Announce'),
                      announce_path(@announce),
                      :method => 'delete',
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }%>
        </li>
      </ul>
    </div><!--/.well -->
  </div><!--/span-->
  <div class="col-md-9">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
      <dd><%= @announce.title %></dd>
      <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
      <dd><%= @announce.content %></dd>
      <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
      <dd><%= @announce.price %>cuc</dd>
      <dd>
        <% if @announce.image1.present? %>
            <a href="<%= @announce.image1.url %>" target="_blank">
              <%= image_tag @announce.image1.url(:thumb) %>
            </a>
        <% end %>
        <% if @announce.image2.present? %>
            <a href="<%= @announce.image2.url %>" target="_blank">
              <%= image_tag @announce.image2.url(:thumb) %>
            </a>
        <% end %>
        <% if @announce.image3.present? %>
            <a href="<%= @announce.image3.url %>" target="_blank">
              <%= image_tag @announce.image3.url(:thumb) %>
            </a>
        <% end %>

      </dd>

    </dl>
  </div>
</div>





